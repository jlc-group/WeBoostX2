# ============================================
# WeBoostX 2.0 - Example Environment File
# Copy this file to `.env` and fill in real values.
# IMPORTANT: Never commit your real `.env` to GitHub.
# ============================================

# --------------------------------------------
# App
# --------------------------------------------
ENVIRONMENT=development
DEBUG=true

# --------------------------------------------
# Security
# --------------------------------------------
# Generate a strong secret for production.
SECRET_KEY=change-me
ACCESS_TOKEN_EXPIRE_MINUTES=1440
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# --------------------------------------------
# Database
# --------------------------------------------
# Either set DATABASE_URL OR the POSTGRES_* parts.
POSTGRES_USER=postgres
POSTGRES_PWD=change-me
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_DB=weboostx
DATABASE_URL=postgresql://postgres:change-me@localhost:5432/weboostx

# --------------------------------------------
# CORS (JSON array)
# --------------------------------------------
CORS_ORIGINS=["http://localhost:3000","http://localhost:8000"]

# --------------------------------------------
# TikTok API
# --------------------------------------------
TIKTOK_APP_ID=
TIKTOK_APP_SECRET=
TIKTOK_ACCESS_TOKEN=
TIKTOK_BUSINESS_ID=

# OAuth2 refresh flow
TIKTOK_CLIENT_ID=
TIKTOK_CLIENT_SECRET=
TIKTOK_REFRESH_TOKEN=

# Legacy env names (optional)
TIKTOK_MAIN_ACCESS_TOKEN=
BUSINESS_ID=
TIKTOK_AD_TOKEN=
ADVERTISER_ID_IDAC_MAIN=
ADVERTISER_ID_IDAC_ECOM=
ADVERTISER_ID_IDAC_JDENT=
ADVERTISER_ID_ENTRA=
ADVERTISER_ID_GRVT=

# --------------------------------------------
# Facebook/Meta API
# --------------------------------------------
FACEBOOK_APP_ID=
FACEBOOK_APP_SECRET=
FACEBOOK_ACCESS_TOKEN=
FACEBOOK_API_VERSION=v19.0

# --------------------------------------------
# LINE Notify
# --------------------------------------------
LINE_NOTIFY_TOKEN=
LINE_NOTIFY_TOKEN_ADMIN=

# --------------------------------------------
# Scheduler
# --------------------------------------------
SCHEDULER_ENABLED=true
CONTENT_SYNC_INTERVAL_MINUTES=60
AD_SYNC_INTERVAL_MINUTES=30
OPTIMIZATION_INTERVAL_HOURS=2

# --------------------------------------------
# Redis (optional)
# --------------------------------------------
REDIS_URL=


